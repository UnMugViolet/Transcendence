{
  "name": "transcendance-frontend",
  "version": "1.0.0",
  "scripts": {
    "copy-assets": "mkdir -p dist/data && cp srcs/data/* dist/data/",
    "dev": "npm run copy-assets && concurrently \"npm run watch-ts\" \"npm run watch-css\" \"npm run serve\"",
    "watch-ts": "tsc --outDir dist --watch",
    "watch-css": "tailwindcss -i srcs/css/index.css -o dist/css/index.css --watch",
    "serve": "live-server --host=0.0.0.0 --port=3001 --no-browser",
    "css": "postcss srcs/css/*.css --dir dist/css/",
    "tailwind": "tailwindcss -i srcs/css/index.css -o dist/css/index.css --watch",
    "build-ts": "tsc --outDir dist",
    "build-css": "npm run css && tailwindcss -i srcs/css/index.css -o dist/css/index.css --minify",
    "build": "npm run copy-assets && npm run build-ts && npm run build-css",
    "build-tailwind": "tailwindcss -i srcs/css/index.css -o dist/css/index.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.0",
    "postcss": "^8.3.0",
    "postcss-cli": "^11.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "tailwindcss": "^3.3.3"
  }
}
