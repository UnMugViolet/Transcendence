{
  "name": "transcendance-frontend",
  "version": "1.0.0",
  "scripts": {
    "css": "postcss src/style.css -o dist/style.css",
    "tailwind": "tailwindcss -i src/style.css -o dist/style.css --watch",
    "build-ts": "tsc --outDir dist",
    "build-css": "concurrently  \"npm run css\" \"npm run tailwind\"",
    "dev": "concurrently \"npm run build-ts\" \"npm run build-css\" ",
    "build-tailwind": "tailwindcss -i src/style.css -o dist/style.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.3.0",
    "postcss-cli": "^11.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.3.3"
  }
}
