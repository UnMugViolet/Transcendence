{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "srcs",
    "preserveConstEnums": true,
    "declaration": false,
    "removeComments": false,
    "sourceMap": true
  },
  "include": ["srcs/**/*"],
  "exclude": ["node_modules", "dist"]
}
