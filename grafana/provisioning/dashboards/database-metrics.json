{
  "title": "SQLite Database Metrics",
  "description": "Real-time monitoring of SQLite database performance and health",
  "tags": ["database", "sqlite"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Database File Size",
      "type": "stat",
      "targets": [
        {
          "expr": "sqlite_database_size_bytes",
          "legendFormat": "Size (bytes)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 104857600
              },
              {
                "color": "red",
                "value": 524288000
              }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Database Locks",
      "type": "stat",
      "targets": [
        {
          "expr": "sqlite_database_locks",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Read Query Duration (p95)",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(sqlite_query_duration_seconds_bucket{query_type=\"read\"}[5m])) * 1000",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Write Query Duration (p95)",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(sqlite_query_duration_seconds_bucket{query_type=\"write\"}[5m])) * 1000",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "red",
                "value": 500
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Query Volume",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(sqlite_query_duration_seconds_count[5m])",
          "legendFormat": "{{ query_type }}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      }
    },
    {
      "id": 5,
      "title": "Query Duration Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(sqlite_query_duration_seconds_bucket{query_type=\"read\"}[5m])) * 1000",
          "legendFormat": "Read (p95)",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(sqlite_query_duration_seconds_bucket{query_type=\"write\"}[5m])) * 1000",
          "legendFormat": "Write (p95)",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      }
    }
  ],
  "uid": "sqlite-database-metrics",
  "version": 1
}
